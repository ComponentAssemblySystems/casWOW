<header class="py-1 px-3 mb-4 bg-light shadow-sm rounded-b-full fixed-top">
  <div class="container-fluid">
    <div class="d-inline-flex flex-wrap align-items-center justify-content-between gap-2 w-100">
      <div class="d-inline-flex gap-2 align-items-center me-3">
        <button class="btn btn-outline-dark" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample" title="Menu">
          <i class="fa-solid fa-bars fa-lg"></i>
        </button>
        <a href="{{ '/' | url }}" class="d-flex align-items-center mb-2 mb-lg-0 link-secondary text-decoration-none">
          <img src="{{ '/img/CAS_logo.svg' | url }}" height="32px" alt="CASWOW logo" style="height: 32px;" />
        </a>
      </div>

      <ul class="nav navbar-top col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0 d-none d-lg-flex">
        <li class="d-none d-lg-block">
          <a href="{{ '/costs/xpress' | url }}" class="nav-link px-2 link-secondary {% if '/xpress' in page.url %}active{%- endif -%}">XPress</a>
        </li>
        <li class="d-none d-lg-block">
          <a href="{{ '/costs/project-costs' | url }}" class="nav-link px-2 link-secondary {% if '/costs/' in page.url %}active{%- endif -%}">Project Costs</a>
        </li>
        <li class="d-none d-lg-block">
          <a href="{{ '/reports' | url }}" class="nav-link px-2 link-secondary {% if '/reports' in page.url %}active{%- endif -%}">Reports</a>
        </li>
        <li class="d-none d-lg-block">
          <a href="{{ '/project-info' | url }}" class="nav-link px-2 link-secondary {% if '/project-info' in page.url %}active{%- endif -%}">Project Information</a>
        </li>
        <li class="d-none d-lg-block">
          <a href="{{ '/vendor-info' | url }}" class="nav-link px-2 link-secondary {% if '/vendor-info' in page.url %}active{%- endif -%}">Vendor Information</a>
        </li>
      </ul>

      <div class="d-none d-lg-flex gap-2">
        <button class="btn btn-sm btn-dropdown-toggle btn-outline-secondary" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="fa-solid fa-building"></i> <span class="d-none d-lg-inline">CAS - New York</span>
        </button>
        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-lg-start">
          {% for item in companyList %}
          <li>
            <a class="dropdown-item {% if item.text === 'CAS - New York' %}active{% endif %}" href="#">{{ item.text }}</a>
          </li>
          {% endfor %}
        </ul>
      </div>

      <div class="d-none d-lg-flex gap-2">
        <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Print">
          <i class="fa-solid fa-print"></i>
        </button>
        <button class="btn btn-sm btn-outline-secondary align-items-center" type="button" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Export">
          <i class="fa-solid fa-file-export"></i>
        </button>
      </div>

      <div class="dropdown text-end d-flex">
        <a href="#" class="d-block link-secondary text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
          <img src="{{ '/img/lumberjack.png' | url }}" height="32px" alt="Lumberjack avatar" style="height: 32px;" class="rounded-full" />
        </a>
        <ul class="dropdown-menu text-small" style="">
          <li>
            <a class="dropdown-item" href="#">Access Level A</a>
          </li>
          <li>
            <a class="dropdown-item" href="#">Change Password</a>
          </li>
          <li>
            <hr class="dropdown-divider">
          </li>
          <li>
            <a class="dropdown-item" href="#">My Configuration</a>
          </li>
          <li>
            <a class="dropdown-item" href="#">Email Administrator</a>
          </li>
          <li>
            <hr class="dropdown-divider">
          </li>
          <li>
            <a class="dropdown-item" href="https://www.chromatic.com/library?appId=6903b2381f768ce7c6da402a" target="_blank" alt="Link to component library on Storybook">
              Component Library
              <i class="fa-solid fa-external-link"></i>
            </a>
          </li>
          <li>
            <a class="dropdown-item" href="https://6903b2381f768ce7c6da402a-jdnoovaaei.chromatic.com/?path=/docs/introduction--docs" target="_blank" alt="Link to documentation on Storybook">View Storybook
              <i class="fa-solid fa-external-link"></i>
            </a>
          </li>
          <li>
            <hr class="dropdown-divider">
          </li>
          <li>
            <a class="dropdown-item" href="#">Log out</a>
          </li>
        </ul>
      </div>

    </div>
  </div>
</header>
