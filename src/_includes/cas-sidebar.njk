    <h5 class="offcanvas-title"
      id="sidebarMenuLabel"
      style="display: flex; width: 100%; align-items: center;"
    >
      <div class="sidebar-header-logo">
        <img src="{{ '/img/CAS_logo.svg' | url }}" height="32px" alt="CASWOW logo" style="height: 32px;" />
        <span class="uppercase fs-3 text-wrap">CASim Online</span>
      </div>
    </h5>
  </div>
