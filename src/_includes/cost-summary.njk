---
layout : base.njk
---

<ul class="nav nav-pills border-bottom pb-2 mb-2">
  <li class="nav-item">
    <a class="nav-link active" aria-current="page" href="#">
      Active
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#">
      Inactive
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#">
      Complete
    </a>
  </li>
</ul>

<div class="table-responsive-lg">
  <table class="table table-striped table-hover table-sm">
    <thead>
      <tr class="table-primary">
        {% for data in costsummary %}
          {%- if data.art === "true" -%}
            <th scope="col"></th>
          {%- endif -%}
        {% endfor %}
        {% for data in costsummary %}
          {%- if data.graph === "true" -%}
            <th scope="col"></th>
          {%- endif -%}
        {% endfor %}
        <th scope="col">Project</th>
        <th scope="col">ToDate Costs</th>
        <th scope="col">Total Project Costs</th>
        <th scope="col">Contract Total</th>
        <th scope="col">Pending COs</th>
        <th scope="col">Billed ToDate</th>
        <th scope="col">Payments Remaining</th>
        <th scope="col">Unbilled Costs</th>
      </tr>
    </thead>
    <tbody>
      {% for data in costsummary %}
        <tr>
          {%- if data.art === "true" -%}
            <th scope="row" class="text-center">
              <a href="#" alt="Link to area chart"
              data-bs-toggle="tooltip" data-bs-placement="right"
                data-bs-custom-class="arch-plan-tooltip"
                data-bs-title="Art Chart">
                <i class="fa-solid fa-chart-area"></i>
              </a>
            </th>
          {%- endif -%}
          {%- if data.graph === "true" -%}
            <th scope="row" class="text-center">
              <a href="#" alt="Link to art chart"
              data-bs-toggle="tooltip" data-bs-placement="right"
                data-bs-custom-class="arch-plan-tooltip"
                data-bs-title="Data Chart">
                <i class="fa-solid fa-chart-simple"></i>
              </a>
            </th>
          {%- endif -%}
          <td class="d-flex align-items-center gap-1">
            <a href="/casWOW/to-date-costs" class="flex-grow-1">{{ data.project }}</a>
            <span class="badge text-bg-secondary bg-transparent border border-secondary text-secondary">{{ data.badge }}</span>
          </td>
          <td>{{ data.toDateCosts }}</td>
          <td>{{ data.totalProjectCost }}</td>
          <td>{{ data.contractTotal }}</td>
          <td>{{ data.pending }}</td>
          <td>{{ data.billedToDate }}</td>
          <td>{{ data.paymentsReceived }}</td>
          <td>{{ data.unbilledCosts }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  <nav aria-label="Page navigation example">
  <ul class="pagination justify-content-end">
    <li class="page-item">
      <a class="page-link disabled">
        <i class="fa-solid fa-angle-left"></i>
      </a>
    </li>
    <li class="page-item">
      <a class="page-link disabled">
        <i class="fa-solid fa-angles-left"></i>
      </a>
    </li>
    <li class="page-item active"><a class="page-link" href="#" aria-current="page">1</a></li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item">
      <a class="page-link">
        <i class="fa-solid fa-angle-right"></i>
      </a>
    </li>
    <li class="page-item">
      <a class="page-link">
        <i class="fa-solid fa-angles-right"></i>
      </a>
    </li>
  </ul>
</nav>
</div>
