<div class="table-responsive">
  <table class="table table-striped table-hover table-sm">
    <thead>
      <tr class="table-primary">
        <th scope="col">Area</th>
        <th scope="col">Costs</th>
        <th scope="col">Equated</th>
        <th scope="col">Total Budget</th>
        <th scope="col">Orig Budget</th>
        <th scope="col">Budget Adjusted</th>
        <th scope="col">% Complete</th>
        <th scope="col">% Budget</th>
      </tr>
    </thead>
    <tbody>
      {% for data in todatecosts %}
        <tr>
          <td class="d-flex align-items-center gap-1">
            <a href="" class="flex-grow-1">{{ data.area }}</a>
          </td>
          <td>{{ data.costs }}</td>
          <td>{{ data.equated }}</td>
          <td>{{ data.totalBudget }}</td>
          <td>{{ data.origBudget }}</td>
          <td>{{ data.budgetAdjusted }}</td>
          <td>
            <div class="progress" role="progressbar" aria-label="Example with label" aria-valuenow={{ data.percentComplete }} aria-valuemin="0" aria-valuemax="100">
              {% set percent = data.percentComplete | int %}
              {%- if data.percent <= 20 -%}
              <div class="progress-bar bg-secondary" style="width: {{ percent }}%"></div>
              {%- elseif percent > 21 and percent < 50 -%}
              <div class="progress-bar bg-danger" style="width: {{ percent }}%">{{ percent }}</div>
              {%- elseif percent >= 50 and percent < 100 -%}
              <div class="progress-bar bg-primary" style="width: {{ percent }}%">{{ percent }}</div>
              {%- elseif percent === 100 -%}
              <div class="progress-bar bg-success" style="width: {{ percent }}%">{{ percent }}</div>
              {%- endif -%}
            </div>
          </td>
          <td>
            <div class="progress" role="progressbar" aria-label="Example with label" aria-valuenow={{ data.percentBudget }} aria-valuemin="0" aria-valuemax="100">
              {% set percent = data.percentBudget | int %}
              {%- if data.percent <= 20 -%}
              <div class="progress-bar bg-secondary" style="width: {{ percent }}%"></div>
              {%- elseif percent > 21 and percent < 50 -%}
              <div class="progress-bar bg-danger" style="width: {{ percent }}%">{{ percent }}</div>
              {%- elseif percent >= 50 and percent < 100 -%}
              <div class="progress-bar bg-primary" style="width: {{ percent }}%">{{ percent }}</div>
              {%- elseif percent === 100 -%}
              <div class="progress-bar bg-success" style="width: {{ percent }}%">{{ percent }}</div>
              {%- endif -%}
            </div>
          </td>
        </tr>
      {% endfor %}
        <tr class="table-footer">
          <td>
            <span class="fw-bold">Totals</span>
          </td>
          <td>19,960,808</td>
          <td>21,225,017</td>
          <td>21,225,017</td>
